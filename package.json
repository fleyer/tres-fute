  "dependencies": {
    "@reduxjs/toolkit": "^1.6.1",
    "dotenv-webpack": "^7.0.3",
    "lodash": "^4.17.21",
    "preact": "^10.5.14",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "react-icons": "^4.2.0",
    "react-redux": "^7.2.4",
    "redux-undo": "^1.0.1",
    "tailwindcss": "^2.2.4"
  },
  "jest": {
    "preset": "jest-preset-preact",
